@model MVC.Models.LoginViewModel
@{
    ViewData["Title"] = "Point of Sale - Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card card-heso">
            <div class="card-header card-header-heso text-center">
                <h4 class="mb-0">
                    <i class="fas fa-user-graduate"></i> Student Login
                </h4>
            </div>
            <div class="card-body p-4">
                <p class="text-center text-muted mb-4">
                    Login to manage your print credits
                </p>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-heso-error">
                        <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">
                            <i class="fas fa-user"></i> @Html.DisplayNameFor(m => m.Username)
                        </label>
                        <input asp-for="Username" class="form-control form-control-lg"
                               placeholder="Your HES-SO username" autocomplete="username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.Password)
                        </label>
                        <input asp-for="Password" class="form-control form-control-lg"
                               placeholder="Your password" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-heso-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <small class="text-muted">
                        <i class="fas fa-id-card"></i>
                        Use your HES-SO credentials
                    </small>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Home")" class="text-heso-blue">
                <i class="fas fa-arrow-left"></i> Back to home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}